generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wallet {
  id        String @id @default(uuid())
  address   String @unique
  createdAt DateTime @default(now())
}

model Transaction {
  id          String @id @default(uuid())
  from        String
  to          String
  amount      Float
  hash        String @unique
  createdAt   DateTime @default(now())
}
